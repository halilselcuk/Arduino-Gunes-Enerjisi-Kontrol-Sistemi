<p id="degerler"></p>
 
<script>
function degerler(){var e=new XMLHttpRequest;e.onreadystatechange=function(){4==this.readyState&&200==this.status&&(document.getElementById("degerler").innerHTML=this.responseText,setTimeout(function(){degerler()},3e3))},e.open("GET","degerler",!0),e.send()}function getCookie(e){var t=("; "+document.cookie).split("; "+e+"=");if(2==t.length)return t.pop().split(";").shift()}function istekYolla(e,t){var n=new XMLHttpRequest;n.onreadystatechange=function(){4==this.readyState&&200==this.status&&(document.getElementById("sonuc").innerHTML=this.responseText)},n.open("POST",e,!0),n.send("key="+getCookie("key")+t)}degerler();
</script>

